<div class="container">

<h3 class="center pink-text text-lighten-3">Sign Up</h3>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br><br>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br><br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation, "Password Confirmation" %>
  <%= f.password_field :password_confirmation %>
  <br><br>
  <%= f.submit "Sign Up", class: "waves-effect waves-light btn pink lighten-3"%>
<% end %>

</div>
